  "imports": {
    "#entities/*": "./src/domain/entities/*.js",
    "#usecases/*": "./src/domain/usecases/*.js",
    "#contracts/*": "./src/domain/contracts/*.js",
    "#models/*": "./src/infrastructure/models/*.js",
    "#controllers/*": "./src/infrastructure/controllers/*.js",
    "#validators/*": "./src/infrastructure/validators/*.js",
    "#exceptions/*": "./src/infrastructure/exceptions/*.js",
    "#middleware/*": "./src/infrastructure/middleware/*.js",
    "#repositories/*": "./src/infrastructure/repositories/*.js",
    "#utils/*": "./src/infrastructure/utils/*.js",
    "#mails/*": "./src/infrastructure/mails/*.js",
    "#policies/*": "./src/infrastructure/policies/*.js",
    "#abilities/*": "./src/infrastructure/abilities/*.js",
    "#services/*": "./src/infrastructure/services/*.js",
    "#listeners/*": "./src/infrastructure/listeners/*.js",
